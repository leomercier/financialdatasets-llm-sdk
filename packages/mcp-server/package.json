{
  "name": "mcp",
  "module": "index.ts",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "exec": "bun build ./build/index.js --compile --outfile ./build/fds"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "bin": {
    "mcp-server": "./build/index.js"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.8.1"
  }
}
